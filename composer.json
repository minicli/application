{
  "name": "minicli/application",
  "description": "Minicli Application Template",
  "license": "MIT",
  "homepage": "https://github.com/minicli/application",
  "keywords": ["cli","command-line", "template"],
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "require": {
    "minicli/minicli": "^4.0",
    "minicli/command-help": "^1.0"
  },
  "require-dev": {
    "pestphp/pest": "^1.21",
    "laravel/pint": "^1.10"
  },
  "scripts": {
    "test" : ["pest"],
    "lint" : ["pint"]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
